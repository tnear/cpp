{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "[Debug] Build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",        // debug info
                "/EHsc",      // exception handling
                "/nologo",    // simplified output
                "/std:c++20", // C++20 compilation
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "[Release] Build active file",
            "command": "cl.exe",
            "args": [
                "/O2",        // all optimizations
                "/MT",        // use static version of runtime library (common for release builds)
                "/EHsc",      // exception handling
                "/nologo",    // simplified output
                "/std:c++20", // C++20 compilation
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}